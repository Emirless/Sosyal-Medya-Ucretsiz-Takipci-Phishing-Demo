    id SMALLINT AUTO_INCREMENT PRIMARY KEY,
    schat_username varchar(120) NOT NULL,
    schat_password varchar(120) NOT NULL,
    Kayıt_Tarih datetime DEFAULT CURRENT_TIMESTAMP

);
-- pinterest veri tabanı oluşturma --
CREATE DATABASE pinterest DEFAULT CHARACTER SET utf8 COLLATE utf8_turkish_ci;

--  tablo oluşturma --
