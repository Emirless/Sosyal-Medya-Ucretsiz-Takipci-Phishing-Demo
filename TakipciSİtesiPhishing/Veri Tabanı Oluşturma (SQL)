-- instagram veri tabanı oluşturma --
CREATE DATABASE instagram DEFAULT CHARACTER SET utf8 COLLATE utf8_turkish_ci;
-- instagram tablo oluşturma --
CREATE TABLE instagram_users(

    id SMALLINT AUTO_INCREMENT PRIMARY KEY,
    ig_username varchar(120) NOT NULL,
    ig_password varchar(120) NOT NULL,
    Kayıt_Tarih datetime DEFAULT CURRENT_TIMESTAMP

);
-- Twitter veri tabanı oluşturma --
CREATE DATABASE twitter DEFAULT CHARACTER SET utf8 COLLATE utf8_turkish_ci;
-- Tablo Oluşturma --
CREATE TABLE twitter_users(

    id SMALLINT AUTO_INCREMENT PRIMARY KEY,
    twitter_username varchar(120) NOT NULL,
    twitter_password varchar(120) NOT NULL,
    Kayıt_Tarih datetime DEFAULT CURRENT_TIMESTAMP

);

